{% extends 'base.html.twig' %}

{% block title %}Manage Exams{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            min-height: 100vh;
            padding: 20px;
        }
        .exams-container {
            max-width: 1200px;
            margin: 0 auto;
        }
        .page-header {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .page-header h1 {
            margin: 0;
            color: #333;
            font-size: 2em;
        }
        .btn-primary {
            display: inline-block;
            padding: 12px 24px;
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 500;
            transition: transform 0.3s, box-shadow 0.3s;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.2);
            color: white;
        }
        .table-container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            overflow-x: auto;
        }
        .exams-table {
            width: 100%;
            border-collapse: collapse;
        }
        .exams-table thead {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
        }
        .exams-table th {
            padding: 15px;
            text-align: left;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.9em;
            letter-spacing: 0.5px;
        }
        .exams-table tbody tr {
            border-bottom: 1px solid #eee;
            transition: background 0.3s;
        }
        .exams-table tbody tr:hover {
            background: #f8f9fa;
        }
        .exams-table td {
            padding: 15px;
            color: #333;
        }
        .exam-title {
            font-weight: 600;
            color: #4facfe;
            font-size: 1.1em;
        }
        .exam-date {
            color: #666;
            font-size: 0.95em;
        }
        .exam-date i {
            margin-right: 5px;
            color: #4facfe;
        }
        .action-buttons {
            display: flex;
            gap: 10px;
        }
        .btn {
            padding: 8px 16px;
            border-radius: 6px;
            text-decoration: none;
            font-size: 0.9em;
            font-weight: 500;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }
        .btn-show {
            background: #28a745;
            color: white;
        }
        .btn-show:hover {
            background: #218838;
            color: white;
            transform: translateY(-2px);
        }
        .btn-edit {
            background: #ffc107;
            color: #333;
        }
        .btn-edit:hover {
            background: #e0a800;
            color: #333;
            transform: translateY(-2px);
        }
        .btn-delete {
            background: #dc3545;
            color: white;
            border: none;
            cursor: pointer;
        }
        .btn-delete:hover {
            background: #c82333;
            transform: translateY(-2px);
        }
        .no-records {
            text-align: center;
            padding: 40px;
            color: #999;
            font-size: 1.1em;
        }
        .no-records i {
            font-size: 3em;
            margin-bottom: 15px;
            display: block;
            color: #ddd;
        }
        .back-link {
            display: inline-block;
            margin-bottom: 20px;
            color: white;
            text-decoration: none;
            font-weight: 500;
            transition: transform 0.3s;
        }
        .back-link:hover {
            transform: translateX(-5px);
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="exams-container">
        <a href="{{ path('app_professor_dashboard') }}" class="back-link">‚Üê Back to Dashboard</a>

        <div class="page-header">
            <h1>üìù Manage Exams</h1>
            <a href="{{ path('app_examen_new') }}" class="btn-primary">‚ûï Create New Exam</a>
        </div>

        <div class="table-container">
            {% if examens|length > 0 %}
                <table class="exams-table">
                    <thead>
                    <tr>
                        <th>Exam Title</th>
                        <th>Date</th>
                        <th>Course</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for examan in examens %}
                        <tr>
                            <td>
                                <div class="exam-title">{{ examan.Libelle }}</div>
                            </td>
                            <td>
                                <div class="exam-date">
                                    üìÖ {{ examan.DateExamen ? examan.DateExamen|date('F d, Y') : 'Date not set' }}
                                </div>
                            </td>
                            <td>
                                {% if examan.cours %}
                                    <span style="padding: 5px 10px; background: #e3f2fd; color: #1976d2; border-radius: 5px; font-size: 0.9em;">
                                    {{ examan.cours.libelle }}
                                </span>
                                {% else %}
                                    <span style="color: #999;">No course assigned</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a href="{{ path('app_examen_show', {'id': examan.id}) }}" class="btn btn-show">
                                        üëÅÔ∏è View Grades
                                    </a>
                                    <a href="{{ path('app_examen_edit', {'id': examan.id}) }}" class="btn btn-edit">
                                        ‚úèÔ∏è Edit
                                    </a>
                                    <form method="post" action="{{ path('app_examen_delete', {'id': examan.id}) }}" onsubmit="return confirm('Are you sure you want to delete this exam?');" style="margin: 0;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ examan.id) }}">
                                        <button type="submit" class="btn btn-delete">üóëÔ∏è Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="no-records">
                    <i>üì≠</i>
                    <p>No exams found. Create your first exam!</p>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}