<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% if app.user %}
            {% set navItems = [] %}
            {% if 'ROLE_ADMIN' in app.user.roles %}
                {% set navItems = [
                    {'label': 'Dashboard', 'route': 'app_admin_dashboard'},
                    {'label': 'Classes', 'route': 'app_classe_index'},
                    {'label': 'Courses', 'route': 'app_cours_index'},
                    {'label': 'Exams', 'route': 'app_examen_index'},
                    {'label': 'Users', 'route': 'app_user_index'}
                ] %}
            {% elseif 'ROLE_PROFESSOR' in app.user.roles %}
                {% set navItems = [
                    {'label': 'Dashboard', 'route': 'app_professor_dashboard'},
                    {'label': 'Classes', 'route': 'app_classe_index'},
                    {'label': 'Courses', 'route': 'app_cours_index'},
                    {'label': 'Exams', 'route': 'app_examen_index'}
                ] %}
            {% else %}
                {% set navItems = [
                    {'label': 'Dashboard', 'route': 'app_student_dashboard'},
                    {'label': 'Courses', 'route': 'app_cours_index'},
                    {'label': 'Exams', 'route': 'app_examen_index'}
                ] %}
            {% endif %}

            <nav style="background: #333; padding: 15px; margin-bottom: 20px;">
                <div style="max-width: 1200px; margin: 0 auto; display: flex; justify-content: space-between; align-items: center;">
                    <div style="color: white; font-weight: bold;">
                        Course Management System
                    </div>
                    <div style="display: flex; gap: 20px; align-items: center;">
                        <ul style="display: flex; gap: 15px; list-style: none; margin: 0; padding: 0;">
                            {% for item in navItems %}
                                <li>
                                    <a href="{{ path(item.route) }}" style="color: white; text-decoration: none; font-weight: 500;">
                                        {{ item.label }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                        <span style="color: #ccc;">{{ app.user.email }}</span>
                        <a href="{{ path('app_logout') }}" style="color: white; text-decoration: none; background: #dc3545; padding: 8px 15px; border-radius: 5px;">Logout</a>
                    </div>
                </div>
            </nav>
        {% endif %}
        {% block body %}{% endblock %}
    </body>
</html>
