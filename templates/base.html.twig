<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% if app.user %}
            <nav style="background: #333; padding: 15px; margin-bottom: 20px;">
                <div style="max-width: 1200px; margin: 0 auto; display: flex; justify-content: space-between; align-items: center;">
                    <div style="color: white; font-weight: bold;">
                        Course Management System
                    </div>
                    <div style="display: flex; gap: 20px; align-items: center;">
                        {% if 'ROLE_ADMIN' in app.user.roles %}
                            <a href="{{ path('app_admin_dashboard') }}" style="color: white; text-decoration: none;">Admin Dashboard</a>
                        {% elseif 'ROLE_PROFESSOR' in app.user.roles %}
                            <a href="{{ path('app_professor_dashboard') }}" style="color: white; text-decoration: none;">Professor Dashboard</a>
                        {% else %}
                            <a href="{{ path('app_student_dashboard') }}" style="color: white; text-decoration: none;">Student Dashboard</a>
                        {% endif %}
                        <span style="color: #ccc;">{{ app.user.email }}</span>
                        <a href="{{ path('app_logout') }}" style="color: white; text-decoration: none; background: #dc3545; padding: 8px 15px; border-radius: 5px;">Logout</a>
                    </div>
                </div>
            </nav>
        {% endif %}
        {% block body %}{% endblock %}
    </body>
</html>
