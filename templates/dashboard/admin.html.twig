{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
        }
        .dashboard-header {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }
        .dashboard-header h1 {
            margin: 0;
            color: #333;
            font-size: 2.5em;
        }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            text-align: center;
            transition: transform 0.3s;
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
        .stat-card h3 {
            margin: 0 0 10px 0;
            color: #667eea;
            font-size: 1.2em;
        }
        .stat-card .number {
            font-size: 3em;
            font-weight: bold;
            color: #764ba2;
        }
        .crud-section {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }
        .crud-section h2 {
            color: #333;
            margin-bottom: 20px;
            border-bottom: 3px solid #667eea;
            padding-bottom: 10px;
        }
        .crud-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
        }
        .crud-link {
            display: block;
            padding: 15px 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-decoration: none;
            border-radius: 8px;
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
            font-weight: 500;
        }
        .crud-link:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.2);
            color: white;
        }
        .btn-logout {
            display: inline-block;
            padding: 10px 20px;
            background: #dc3545;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 20px;
        }
        .btn-logout:hover {
            background: #c82333;
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
<div class="dashboard-container">
    <div class="dashboard-header">
        <h1>üë®‚Äçüíº Admin Dashboard</h1>
        <p>Welcome, Admin! Manage your course management system.</p>
        <a href="{{ path('app_logout') }}" class="btn-logout">Logout</a>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <h3>Classes</h3>
            <div class="number">{{ stats.classes }}</div>
        </div>
        <div class="stat-card">
            <h3>Courses</h3>
            <div class="number">{{ stats.cours }}</div>
        </div>
        <div class="stat-card">
            <h3>Exams</h3>
            <div class="number">{{ stats.examens }}</div>
        </div>
        <div class="stat-card">
            <h3>Registrations</h3>
            <div class="number">{{ stats.inscriptions }}</div>
        </div>
    </div>

    <div class="crud-section">
        <h2>üìö Manage Classes</h2>
        <div class="crud-grid">
            <a href="{{ path('app_classe_index') }}" class="crud-link">View All Classes</a>
            <a href="{{ path('app_classe_new') }}" class="crud-link">Create New Class</a>
        </div>
    </div>

    <div class="crud-section">
        <h2>üìñ Manage Courses</h2>
        <div class="crud-grid">
            <a href="{{ path('app_cours_index') }}" class="crud-link">View All Courses</a>
            <a href="{{ path('app_cours_new') }}" class="crud-link">Create New Course</a>
        </div>
    </div>

    <div class="crud-section">
        <h2>üìù Manage Exams</h2>
        <div class="crud-grid">
            <a href="{{ path('app_examen_index') }}" class="crud-link">View All Exams</a>
            <a href="{{ path('app_examen_new') }}" class="crud-link">Create New Exam</a>
        </div>
    </div>

    <div class="crud-section">
        <h2>üë• Manage Users</h2>
        <div class="crud-grid">
            <a href="{{ path('app_user_index') }}" class="crud-link">View All Users</a>
            <a href="{{ path('app_register') }}" class="crud-link">Create New User</a>
        </div>
    </div>

    <div class="crud-section">
        <h2>üéì Student Assignments</h2>
        <div class="crud-grid">
            <a href="{{ path('app_assign_students') }}" class="crud-link">Assign Students to Classes</a>
        </div>
    </div>
</div>
{% endblock %}

