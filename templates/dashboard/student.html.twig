{% extends 'base.html.twig' %}

{% block title %}Student Dashboard{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            min-height: 100vh;
            padding: 20px;
        }
        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
        }
        .dashboard-header {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }
        .dashboard-header h1 {
            margin: 0;
            color: #333;
            font-size: 2.5em;
        }
        .section {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }
        .section h2 {
            color: #333;
            margin-bottom: 20px;
            border-bottom: 3px solid #f5576c;
            padding-bottom: 10px;
        }
        .course-card, .exam-card {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 15px;
            border-left: 4px solid #f5576c;
        }
        .course-card h3, .exam-card h3 {
            margin: 0 0 10px 0;
            color: #f5576c;
        }
        .course-card p, .exam-card p {
            margin: 5px 0;
            color: #666;
        }
        .badge {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.85em;
            font-weight: bold;
            margin-left: 10px;
        }
        .badge-success {
            background: #28a745;
            color: white;
        }
        .badge-warning {
            background: #ffc107;
            color: #333;
        }
        .badge-info {
            background: #17a2b8;
            color: white;
        }
        .empty-state {
            text-align: center;
            padding: 40px;
            color: #999;
        }
        .empty-state::before {
            content: "üì≠";
            font-size: 4em;
            display: block;
            margin-bottom: 20px;
        }
        .btn-logout {
            display: inline-block;
            padding: 10px 20px;
            background: #dc3545;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 20px;
        }
        .btn-logout:hover {
            background: #c82333;
            color: white;
        }
        .note-display {
            font-size: 1.5em;
            font-weight: bold;
            color: #f5576c;
            margin-top: 10px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="dashboard-container">
    <div class="dashboard-header">
        <h1>üéì Student Dashboard</h1>
        <p>Welcome, {{ app.user.name ?? app.user.email }}! Here are your courses and exams.</p>
    </div>

    <div class="section">
        <h2>üè´ My Classes</h2>
        {% if inscriptions|length > 0 %}
            {% for inscription in inscriptions %}
                {% if inscription.classe %}
                    <div class="course-card">
                        <h3>{{ inscription.classe.Libelle }}</h3>
                        <p><strong>Status:</strong> 
                            <span class="badge {% if inscription.Status == 'Active' %}badge-success{% elseif inscription.Status == 'Pending' %}badge-warning{% else %}badge-info{% endif %}">
                                {{ inscription.Status }}
                            </span>
                        </p>
                        <p><strong>Registration Date:</strong> {{ inscription.Date ? inscription.Date|date('M d, Y') : 'N/A' }}</p>
                        
                        {% set classeCourses = [] %}
                        {% for course in courses %}
                            {% if course.classe and course.classe.id == inscription.classe.id %}
                                {% set classeCourses = classeCourses|merge([course]) %}
                            {% endif %}
                        {% endfor %}
                        
                        {% if classeCourses|length > 0 %}
                            <div style="margin-top: 15px; padding-top: 15px; border-top: 1px solid #e0e0e0;">
                                <strong style="color: #f5576c;">Courses in this class ({{ classeCourses|length }}):</strong>
                                {% for course in classeCourses %}
                                    <div style="margin-top: 10px; padding: 10px; background: white; border-radius: 5px;">
                                        <strong>{{ course.Libelle }}</strong>
                                        <p style="margin: 5px 0; font-size: 0.9em;">{{ course.Description }}</p>
                                        <p style="margin: 5px 0; font-size: 0.85em; color: #999;">
                                            {{ course.DateDebut ? course.DateDebut|date('M d, Y') : 'N/A' }} - 
                                            {{ course.DateFin ? course.DateFin|date('M d, Y') : 'N/A' }}
                                        </p>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p style="margin-top: 15px; color: #999; font-style: italic;">No courses assigned to this class yet.</p>
                        {% endif %}
                    </div>
                {% endif %}
            {% endfor %}
        {% else %}
            <div class="empty-state">
                <p>You are not enrolled in any class yet. Please contact the administrator.</p>
            </div>
        {% endif %}
    </div>

    <div class="section">
        <h2>üìö All My Courses</h2>
        {% if courses|length > 0 %}
            {% for course in courses %}
                <div class="course-card">
                    <h3>{{ course.Libelle }}</h3>
                    <p><strong>Description:</strong> {{ course.Description }}</p>
                    <p><strong>Start Date:</strong> {{ course.DateDebut|date('Y-m-d') }}</p>
                    <p><strong>End Date:</strong> {{ course.DateFin|date('Y-m-d') }}</p>
                    {% if course.classe %}
                        <p><strong>Class:</strong> {{ course.classe.Libelle }}</p>
                    {% endif %}
                </div>
            {% endfor %}
        {% else %}
            <div class="empty-state">
                <p>No courses enrolled yet.</p>
            </div>
        {% endif %}
    </div>

    <div class="section">
        <h2>üìù My Exams</h2>
        {% if exams|length > 0 %}
            {% for exam in exams %}
                <div class="exam-card">
                    <h3>{{ exam.Libelle }}</h3>
                    <p><strong>Date:</strong> {{ exam.DateExamen|date('Y-m-d') }}</p>
                    {% if exam.Note is not null %}
                        <div class="note-display">Grade: {{ exam.Note }}/20</div>
                    {% else %}
                        <p><span class="badge badge-warning">Grade pending</span></p>
                    {% endif %}
                    {% if exam.cours %}
                        <p><strong>Course:</strong> {{ exam.cours.Libelle }}</p>
                    {% endif %}
                </div>
            {% endfor %}
        {% else %}
            <div class="empty-state">
                <p>No exams found.</p>
            </div>
        {% endif %}
    </div>

</div>
{% endblock %}

